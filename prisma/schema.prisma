generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  shirt_number  Int
  date_of_birth DateTime

  @@map("users")
}

model Payment {
  id           String   @id @default(uuid())
  user_id      String
  amount       Float
  payment_date DateTime

  @@map("payments")
}

model Stats {
  id       String @id @default(uuid())
  big_wall Int?
  sheriff  Int?
  goals    Int?
  assists  Int?

  @@map("stats")
}
