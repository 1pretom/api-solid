generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  shirt_number  Int
  date_of_birth DateTime

  @@map("users")
}

model Payment {
  id           String   @id @default(uuid())
  user_id      String
  amount       Float
  payment_date DateTime @default(now())

  @@map("payments")
}

model Group {
  id         String   @id @default(uuid())
  name       String
  icon       String?
  created_at DateTime @default(now())

  @@map("groups")
}
