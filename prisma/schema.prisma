generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  created_at    DateTime  @default(now())
  shirt_number  Int
  date_of_birth DateTime
  Payment       Payment[]
  Group         Group     @relation(fields: [group_id], references: [id])
  group_id      String

  @@map("users")
}

model Payment {
  id           String   @id @default(uuid())
  amount       Float
  payment_date DateTime @default(now())
  user         User     @relation(fields: [user_id], references: [id])
  user_id      String
  Group        Group    @relation(fields: [group_id], references: [id])
  group_id     String

  @@map("payments")
}

model Group {
  id         String   @id @default(uuid())
  name       String
  icon       String?
  created_at DateTime @default(now())

  payment Payment[]
  User    User[]

  @@map("groups")
}
